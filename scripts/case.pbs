#!/bin/bash

module purge
module load CESM-deps/2-foss-2019a

cd $PBS_O_WORKDIR

# Runtime settings
./xmlchange NTASKS=${PBS_NP}
./xmlchange DOUT_S=FALSE

# CESM case setup
echo
./preview_run
./case.setup --reset

# CESM case build
echo
./case.build

# CESM case immeadiate execution
# Use --no-batch to run the case in the current job
echo
./case.submit --no-batch

<config_batch>

  <batch_system MACH="hydra" type="slurm">
    <batch_submit>sbatch</batch_submit>
    <submit_args>
      <arg flag="-t" name="$JOB_WALLCLOCK_TIME"/>
      <arg flag="-p" name="$JOB_QUEUE"/>
    </submit_args>
    <queues>
      <queue walltimemin="00:60:00" walltimemax="120:00:00" nodemin="1" nodemax="12" default="true">skylake_mpi</queue>
    </queues>
  </batch_system>

  <batch_system MACH="breniac" type="pbs">
    <directives>
      <directive>-l nodes={{ num_nodes }}:ppn={{ tasks_per_node }}</directive>
      <directive default="/bin/bash" > -S {{ shell }}  </directive>
    </directives>
    <queues>
      <queue walltimemin="00:10:00" walltimemax="72:00:00" strict="true" default="true">qdef</queue>
    </queues>
  </batch_system>

  <batch_system MACH="breniac-skl" type="pbs">
    <directives>
      <directive>-l nodes={{ num_nodes }}:ppn={{ tasks_per_node }}:skylake</directive>
      <directive default="/bin/bash" > -S {{ shell }}  </directive>
    </directives>
    <queues>
      <queue walltimemin="00:10:00" walltimemax="72:00:00" strict="true" default="true">qdef</queue>
    </queues>
  </batch_system>

</config_batch>
